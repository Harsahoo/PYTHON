
from tkinter import *
from tkinter.ttk import *
from time import strftime

RED = Tk()
RED.geometry()
RED.title("harsh sahu project 2")

def time():

    string = strftime('%H:%M:%S  %p')
    label.config(text=string)
    label.after(1000, time)

label = Label(RED, font=("ds digital", 80), background="black", foreground='cyan')
label.pack()


time()

mainloop()